@page
@model GoalRoad.Pages.Feed.IndexModel
@{
    ViewData["Title"] = "Feed";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-rss"></i> Feed</h1>
        <span class="badge bg-danger fs-6">Total: @(Model.Feeds?.Total ?? 0)</span>
    </div>
    
    @if (Model.Feeds?.Data != null && Model.Feeds.Data.Any())
    {
        <div class="row">
            @foreach(var f in Model.Feeds.Data)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-person-circle text-primary"></i> Usuário ID: @f.IdUsuario
                            </h5>
                            <p class="card-text">
                                <span class="badge bg-info">
                                    <i class="bi bi-list-ul"></i> @(f.Items?.Count() ?? 0) itens
                                </span>
                            </p>
                            @if (f.Items != null && f.Items.Any())
                            {
                                <div class="mt-3">
                                    <small class="text-muted">Últimos itens:</small>
                                    <ul class="list-unstyled mt-2">
                                        @foreach(var item in f.Items.Take(3))
                                        {
                                            <li class="mb-1">
                                                <i class="bi bi-arrow-right-circle text-secondary"></i>
                                                <small>@(string.IsNullOrEmpty(item.Titulo) ? "Sem título" : (item.Titulo.Length > 30 ? item.Titulo.Substring(0, 30) + "..." : item.Titulo))</small>
                                            </li>
                                        }
                                        @if (f.Items.Count() > 3)
                                        {
                                            <li class="text-muted">
                                                <small>... e mais @(f.Items.Count() - 3) itens</small>
                                            </li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Nenhum feed encontrado.
        </div>
    }
</div>
