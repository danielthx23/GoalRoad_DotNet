@page
@model GoalRoad.Pages.Usuarios.IndexModel
@{
    ViewData["Title"] = "Usuários";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-people"></i> Usuários</h1>
        <span class="badge bg-primary fs-6">Total: @(Model.Usuarios?.Total ?? 0)</span>
    </div>
    
    @if (Model.Usuarios?.Data != null && Model.Usuarios.Data.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-hash"></i> ID</th>
                                <th><i class="bi bi-person"></i> Nome</th>
                                <th><i class="bi bi-envelope"></i> Email</th>
                                <th><i class="bi bi-calendar"></i> Criado Em</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var u in Model.Usuarios.Data)
                            {
                                <tr>
                                    <td>@u.IdUsuario</td>
                                    <td>@u.NomeUsuario</td>
                                    <td>@u.EmailUsuario</td>
                                    <td>@u.CriadoEmUsuario.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Nenhum usuário encontrado.
        </div>
    }
</div>
