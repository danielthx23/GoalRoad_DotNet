<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GoalRoad</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">
                    <i class="bi bi-bullseye"></i> GoalRoad
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="/">
                                <i class="bi bi-house"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Usuarios">
                                <i class="bi bi-people"></i> Usu√°rios
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Carreiras">
                                <i class="bi bi-briefcase"></i> Carreiras
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Tecnologias">
                                <i class="bi bi-code-slash"></i> Tecnologias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Categorias">
                                <i class="bi bi-tags"></i> Categorias
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Feed">
                                <i class="bi bi-rss"></i> Feed
                            </a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="/swagger" target="_blank">
                                <i class="bi bi-file-code"></i> API Docs
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="container-fluid mt-4">
        @RenderBody()
    </main>

    <footer class="bg-light mt-5 py-4">
        <div class="container-fluid text-center">
            <p class="text-muted mb-0">&copy; @DateTime.Now.Year - GoalRoad. Todos os direitos reservados.</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


