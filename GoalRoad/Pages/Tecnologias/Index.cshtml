@page
@model GoalRoad.Pages.Tecnologias.IndexModel
@{
    ViewData["Title"] = "Tecnologias";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-code-slash"></i> Tecnologias</h1>
        <span class="badge bg-info fs-6">Total: @(Model.Tecnologias?.Total ?? 0)</span>
    </div>
    
    @if (Model.Tecnologias?.Data != null && Model.Tecnologias.Data.Any())
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover table-striped">
                        <thead class="table-dark">
                            <tr>
                                <th><i class="bi bi-hash"></i> ID</th>
                                <th><i class="bi bi-tag"></i> Nome</th>
                                <th><i class="bi bi-file-text"></i> Descrição</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach(var t in Model.Tecnologias.Data)
                            {
                                <tr>
                                    <td>@t.IdTecnologia</td>
                                    <td><strong>@t.NomeTecnologia</strong></td>
                                    <td>@(string.IsNullOrEmpty(t.DescricaoTecnologia) ? "-" : (t.DescricaoTecnologia.Length > 80 ? t.DescricaoTecnologia.Substring(0, 80) + "..." : t.DescricaoTecnologia))</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            <i class="bi bi-info-circle"></i> Nenhuma tecnologia encontrada.
        </div>
    }
</div>
